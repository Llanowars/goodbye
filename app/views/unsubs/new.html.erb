<div class="container ">
  <div class="row">
    <div class="col-lg-7 min-height-screen">
      <%= form_tag(service_unsubs_path)  do %>
      <h2 class="tx-blue">Fleeme a quelques questions Ã  vous poser</h2>
      <% @hash_service.each do |d| %>
        <fieldset class="custom-form initial-pos">
          <% if  d[:type] == "radio"%>
            <%= label_tag(d[:label], d[:label]) %>
              <% d[:choices].each do |c| %>
              <div class="radio-field <%=  c[:type] == "radio" && c[:choices] ? "has_sublevel" : "no_sublevel" %>">
                <%= radio_button_tag("unsub[form_complete[#{c[:name]}]]", c[:value], id: "unsub[form_complete_[#{c[:value]}]]")  %>
                <%= label_tag("unsub[form_complete[#{c[:name]}]][#{c[:value]}]]", c[:value]) %>
              </div>
              <% if c[:type] == "radio" && c[:choices] %>
                <fieldset class="sublevel hidden" >
                  <%= label_tag(c[:label], c[:label]) %>
                  <% c[:choices].each do |b| %>
                  <div class="radio-field">
                    <%= radio_button_tag("unsub[form_complete[#{b[:name]}]]", b[:value], id: "unsub[form_complete_[#{b[:value]}]]")  %>
                    <%= label_tag("unsub[form_complete[#{b[:name]}]][#{b[:value]}]]", b[:value]) %>
                  </div>
                  <% end %>
                </fieldset>
              <% end %>
            <% end %>
          <%else %>
          <%= label_tag(d[:label], d[:label]) %>
          <%= content_tag(:input, nil, type: d[:type], name: "unsub[form_complete[#{d[:name]}]]", class: "input-custom ") %>
          <% end %>
          <div class="btn-blue-neg" id="next-button">Suivant<div>
        </fieldset>
        <% end %>
        <div class="initial-pos upload-file">
          <%= form_tag "/profiles/update", :multipart => true  %>
          <%= file_field_tag :photo  %>
        </div>
        <%= submit_tag "validate", class: "initial-pos validate-form" %>
    <% end %>
    </div>
  </div>
</div>





