<div class="container min-height-screen">
  <div class="user">
    <p class="text-left"><%= @unsub.form_complete["firstname"] %> <%= @unsub.form_complete["lastname"] %></p>
    <p class="text-left"><%= @unsub.form_complete["address"] %></p>
    <p class="text-left"><%= @unsub.form_complete["address_complement"] %></p>
    <p class="text-left"><%= @unsub.form_complete["zipcode"] %> <%= @unsub.form_complete["city"] %></p>
  </div>

  <div class="service">
    <p class="text-right"><%= @unsub.service.company %></p>
    <p class="text-right"><%= @unsub.service.name %></p>
    <p class="text-right"><%= @unsub.service.postal_box %></p>
    <p class="text-right"><%= @unsub.service.zip_code %> <%= @unsub.service.city %></p>
  </div>

  <div class="date">
    <p class="text-right"><%= @unsub.form_complete["city"] %>, le <%= Date.today.strftime("%d-%m-%Y") %></p>
  </div>


  <div class="object">
   <p> Objet: Résiliation de la carte cinéma, référence client N° <%= @unsub.form_complete["numero_abonne"] %> </p>
  </div>

  <div class="body">
    <p>Madame, Monsieur,</p>

    <p></p>

    <p>Veuillez accepter Madame, Monsieur, l' expression de mes salutations distinguées.</p>

  </div>

  <div class="signature">
    <p><%= @unsub.form_complete["firstname"] %> <%= @unsub.form_complete["lastname"] %></p>
  </div>
</div>


<%= link_to service_unsub_generate_pdf_path(@unsub.service, @unsub), :class => "btn btn-large btn-danger" do %> Download Now <% end %>

<%= link_to service_unsub_send_email_path(@unsub.service, @unsub), :class => "btn btn-large btn-success" do %> Send by Email <% end %>


